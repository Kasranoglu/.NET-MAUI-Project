               Grid.Row="2"
               Grid.Column="1">


        </Entry>
         <Entry Text=""
                Placeholder="Search Documents..."
              
               Grid.Row="2"
               Grid.Column="0">


        </Entry>

        </Grid>

        </ContentPage>